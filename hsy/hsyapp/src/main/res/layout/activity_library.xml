<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray2"
    android:orientation="vertical"
    tools:context="hsy.com.hsy.activity.LibraryActivityMy">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="当前待还书籍"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/book_no_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="10dp"
                android:text="《卡列尼娜》"
                android:textColor="@color/gary_font" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="平均阅读时间"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/book_look_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="10小时" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="书籍推荐"
                android:textSize="18sp" />

            <hsy.com.hsy.view.HorizontalListView
                android:id="@+id/book_recommend"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="最近阅读书籍"
                android:textSize="18sp" />

            <hsy.com.hsy.view.HorizontalListView

                android:id="@+id/book_look_recently"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/takenotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="记录"
            android:textColor="@color/blue_god"
            android:textSize="18sp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:src="@drawable/xian" />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="预约"
            android:textColor="@color/blue_god"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
